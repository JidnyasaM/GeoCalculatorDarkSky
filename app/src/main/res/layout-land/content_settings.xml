<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <RelativeLayout
        android:id="@+id/lefthalf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight ="1">

        <TextView
            android:id="@+id/distunit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/distunits"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="16dp" />

        <Spinner
            android:id="@+id/distSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/distunit"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="59dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/righthalf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight ="1">

        <TextView
            android:id="@+id/bearunits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/bearunits"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="103dp" />

        <Spinner
            android:id="@+id/bearSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bearunits"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="152dp" />

    </RelativeLayout>

</LinearLayout>